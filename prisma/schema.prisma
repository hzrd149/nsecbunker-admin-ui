generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Nsec {
  id           Int      @id @default(autoincrement())
  encryptedKey String
  version      Int      @default(1)
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  User         User[]
}

model User {
  id         Int      @id @default(autoincrement())
  sourceNpub String
  targetKey  Nsec     @relation(fields: [nsecId], references: [id])
  name       String?
  conditions Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  nsecId     Int
}
